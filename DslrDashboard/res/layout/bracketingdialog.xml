<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:columnCount="2" >

    <TextView
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_margin="1dip"
        android:layout_row="0"
        android:gravity="center_vertical"
        android:text="EV step:" >
    </TextView>

    <TextView
        android:id="@+id/txt_custombktstep"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_margin="1dip"
        android:layout_row="0"
        android:background="@drawable/checkableimageview"
        android:gravity="center_vertical"
        android:text="0.0 EV"
        android:textColor="@android:color/black" >
    </TextView>

    <TextView
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_margin="1dip"
        android:layout_row="1"
        android:gravity="center_vertical"
        android:text="Direcition:" >
    </TextView>

    <TextView
        android:id="@+id/txt_custombktdirection"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_margin="1dip"
        android:layout_row="1"
        android:background="@drawable/checkableimageview"
        android:gravity="center_vertical"
        android:text="Both"
        android:textColor="@android:color/black" >
    </TextView>

    <TextView
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_margin="1dip"
        android:layout_row="2"
        android:gravity="center_vertical"
        android:text="Count:" >
    </TextView>

    <TextView
        android:id="@+id/txt_custombktcount"
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_margin="1dip"
        android:layout_row="2"
        android:background="@drawable/checkableimageview"
        android:gravity="center_vertical"
        android:text="3"
        android:textColor="@android:color/black" >
    </TextView>

    <Space
        android:layout_width="21dp"
        android:layout_height="15dp"
        android:layout_column="0"
        android:layout_row="3" />
    
    <TextView
        style="@style/CodeFont"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:layout_margin="1dip"
        android:layout_row="4"
        android:gravity="center_vertical"
        android:text="Focus first:" >
    </TextView>


    <CheckBox
        android:id="@+id/bkt_focus_first"
        android:layout_column="1"
        android:layout_gravity="left"
        android:layout_row="4"
        android:gravity="center_vertical|center_horizontal" />

</GridLayout>

</FrameLayout>