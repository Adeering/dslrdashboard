<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/fullscreen_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fullscreen"
                    style="@style/BottomButton"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/full_screen" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_aelockstatus"
                style="@style/BottomFont"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="AE-L" />

            <TextView
                android:id="@+id/txt_shutter"
                style="@style/BottomFont"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="1/4" />

            <TextView
                android:id="@+id/txt_aperture"
                style="@style/BottomFont"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="F6.3" />

            <com.dslr.dashboard.ExposureIndicatorDisplay
                android:id="@+id/exposureindicator"
                android:layout_width="150dp"
                android:layout_height="36dp" />

            <ImageView
                android:id="@+id/flashcompensationindicator"
                style="@style/BottomButton"
                android:layout_marginLeft="5dp"
                android:src="@drawable/flashcompensation_indicator" />

            <ImageView
                android:id="@+id/evcompensationindicator"
                style="@style/BottomButton"
                android:layout_marginLeft="5dp"
                android:src="@drawable/evcompensation_indicator" />

            <TextView
                android:id="@+id/txt_sdcard1"
                style="@style/BottomFont"
                android:layout_marginRight="5dp"
                android:text="[E1]" />

            <TextView
                android:id="@+id/txt_sdcard2"
                style="@style/BottomFont"
                android:layout_marginRight="5dp"
                android:text="[E2]" />

            <ImageView
                android:id="@+id/flashindicator"
                style="@style/BottomButton"
                android:layout_marginLeft="5dp"
                android:src="@drawable/flash_indicator" />
        </TableRow>
    </TableLayout>

</FrameLayout>