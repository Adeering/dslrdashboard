<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/shootingmode"
        style="@style/ActionProviderImg"
        android:src="@drawable/i0x500e0x0001"
        android:background="@drawable/checkableimageview"
         />

    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/scenemode"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/i0xd0f90x0000" />
    
    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/cameramode"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/cameramode" />

    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/liveview"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/i0xd1a20x0000" />

    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/custom_bracketing"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/i0xd0c00x0000" />

    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/focus_bracketing"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/focusbkt" />
    
    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/timelapse"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:src="@drawable/timelapse" />
    
    <com.dslr.dashboard.CheckableImageView
        android:id="@+id/flash_commander"
        style="@style/ActionProviderImg"
        android:background="@drawable/checkableimageview"
        android:visibility="gone"
        android:src="@drawable/flash_indicator" />
    
</LinearLayout>